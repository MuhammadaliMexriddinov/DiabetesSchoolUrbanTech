<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color2"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/maintopimage"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="16dp"
                android:layout_gravity="top"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/color2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_flex"
                android:text="NEW ACCOUNT"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First name"
                    android:textColor="@color/color1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_flex"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapesignin"
                    android:id="@+id/inputFamilya"
                    android:hint="Alexsandr"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:padding="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name"
                    android:textColor="@color/color1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_flex"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapesignin"
                    android:id="@+id/inputName"
                    android:singleLine="true"
                    android:hint="Alexsandrovich"
                    android:imeOptions="actionNext"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:padding="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:textColor="@color/color1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_flex"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapesignin"
                    android:id="@+id/inputFatherName"
                    android:singleLine="true"
                    android:hint="Alexsandrov"
                    android:imeOptions="actionNext"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:padding="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="e-mail"
                    android:textColor="@color/color1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_flex"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapesignin"
                    android:id="@+id/inputMail"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/white"
                    android:hint="diabet@gmail.com"
                    android:textColorHint="@color/white"
                    android:padding="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:textColor="@color/color1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_flex"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapesignin"
                    android:id="@+id/inputPhone"
                    android:hint="+998991234567"
                    android:imeOptions="actionNext"
                    android:textColor="@color/white"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColorHint="@color/white"
                    android:padding="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/color1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_flex"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapesignin"
                    android:id="@+id/inputPassword"
                    android:hint="******"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:drawableEnd="@drawable/eyeon"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:padding="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:gravity="center"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSend"
                    android:layout_width="176dp"
                    android:layout_height="54dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shapeauth"
                    android:fontFamily="@font/roboto_flex"
                    android:text="Create"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fieldMain" />



            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</LinearLayout>